programa {
  funcao inicio() {
  real cpc, raio, diametro

  escreva("Vamos somar o perímetro de um circulo!")
  escreva("\nDigite o raio do circulo: ")
  leia(raio)
  diametro = raio + raio
  escreva("O diametro do circulo é: ",diametro)
  cpc = 3.1416 * diametro
  escreva("\nO perímetro do circulo é: ",cpc)
  }
}
