programa {
  funcao inicio() {
  real vpd, largura, altura

  escreva("Vamos somar o volume de uma piramide!")
  escreva("\nDigite o largura da piramide: ")
  leia(largura)
  escreva("Digite a altura da piramide: ")
  leia(altura)
  vpd = (largura * largura) * (altura/3)
  escreva("\nO volume da piramide é : ",vpd) 
  }
}
